<!-- app/src/main/res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- تم اصلی برنامه -->
    <style name="Theme.Hesab" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">@color/toolbar_blue</item>
        <item name="colorPrimaryVariant">@color/toolbar_blue</item>
        <item name="colorOnPrimary">@color/toolbar_text</item>

        <!-- رنگ ثانویه -->
        <item name="colorSecondary">@color/add_button_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- پس‌زمینه و رنگ متن -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColor">@color/table_text</item>

        <!-- رنگ دکمه‌ها و ویجت‌ها -->
        <item name="android:buttonStyle">@style/Widget.Button.Custom</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Custom</item>

        <!-- فونت -->
        <item name="android:fontFamily">@font/iransans</item>
        <item name="fontFamily">@font/iran_sans</item>

        <!-- رنگ وضعیت (status bar) -->
        <item name="android:statusBarColor">@color/toolbar_blue</item>
        <item name="android:navigationBarColor">@color/toolbar_blue</item>
    </style>

    <!-- استایل دکمه‌ها -->
    <style name="Widget.Button.Custom" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/add_button_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <!-- استایل فیلدهای متنی -->
    <style name="Widget.EditText.Custom" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:hintTextColor">@color/gray</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

</resources>
