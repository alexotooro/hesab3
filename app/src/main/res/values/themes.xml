        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>

    <!-- 🌿 تم سبز ملایم -->
    <style name="Theme.Hesab.SoftGreen" parent="Theme.Material3.Light.NoActionBar">
