<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="16dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="⚙️ تنظیمات برنامه حساب"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- فونت و سایز -->
        <TextView
            android:text="اندازه فونت:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/seekFontSize"
            android:max="30"
            android:progress="16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtFontSizeValue"
            android:text="16 sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- رنگ متن -->
        <TextView
            android:text="رنگ متن:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinnerTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- تم برنامه -->
        <TextView
            android:text="تم برنامه:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- خطوط و اکسل -->
        <CheckBox
            android:id="@+id/chkLines"
            android:text="نمایش خطوط بین ردیف‌ها"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/chkExcelMode"
            android:text="فعال‌سازی حالت اکسل (ردیف‌های یکی‌درمیون رنگ متفاوت)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- تومان -->
        <CheckBox
            android:id="@+id/chkShowToman"
            android:text="نمایش مبلغ به تومان به‌جای ریال"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- دکمه ذخیره -->
        <Button
            android:id="@+id/btnSaveSettings"
            android:text="💾 ذخیره تنظیمات"
            android:backgroundTint="@color/button_blue"
            android:textColor="@color/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
