<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- نوار بالای صفحه -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_blue"
        app:title="حساب"
        app:titleTextColor="@color/white" />

    <!-- دکمه‌ی مرکزی افزودن تراکنش -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/header_blue"
        android:padding="8dp">

        <Button
            android:id="@+id/btnAddTransaction"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="+ افزودن تراکنش"
            android:textColor="@color/white"
            android:backgroundTint="@color/toolbar_blue"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp" />
    </LinearLayout>

    <!-- انتخاب بانک -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center_vertical"
        android:background="@color/header_blue">

        <Spinner
            android:id="@+id/spinnerBanks"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background" />
    </LinearLayout>

    <!-- سربرگ جدول -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/table_header"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="تاریخ"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="مبلغ (ریال)"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="بابت"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="توضیحات"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- لیست تراکنش‌ها -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:background="@color/list_background" />

    <!-- نوار پایین -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/table_header">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="8dp">

            <CheckBox
                android:id="@+id/chkOnlyExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فقط هزینه‌ها" />

            <CheckBox
                android:id="@+id/chkOnlyIncome"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فقط درآمدها" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="مانده: ۰ ریال"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
